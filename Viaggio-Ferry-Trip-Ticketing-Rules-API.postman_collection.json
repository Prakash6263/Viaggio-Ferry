{
  "info": {
    "name": "Viaggio Ferry - Complete Trip Management API",
    "description": "All 17 endpoints for Trip Management (6), Availability Management (4), Agent Allocations (4), and Trip Ticketing Rules (4)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "GROUP 1: TRIP MANAGEMENT",
      "description": "9 endpoints for creating, reading, updating, deleting trips and managing availability (GET, CREATE, UPDATE, DELETE availability)",
      "item": [
        {
          "name": "1. CREATE TRIP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tripName\": \"Ferry Route Mumbai - Goa\",\n  \"tripCode\": \"MG001\",\n  \"ship\": \"{{ship_id}}\",\n  \"departurePort\": \"{{port_id_1}}\",\n  \"arrivalPort\": \"{{port_id_2}}\",\n  \"departureDateTime\": \"2025-03-15T08:00:00Z\",\n  \"arrivalDateTime\": \"2025-03-15T16:00:00Z\",\n  \"bookingOpeningDate\": \"2025-02-25T00:00:00Z\",\n  \"bookingClosingDate\": \"2025-03-14T23:59:59Z\",\n  \"checkInOpeningDate\": \"2025-03-15T06:00:00Z\",\n  \"checkInClosingDate\": \"2025-03-15T07:30:00Z\",\n  \"boardingClosingDate\": \"2025-03-15T07:45:00Z\",\n  \"status\": \"SCHEDULED\",\n  \"remarks\": \"Regular scheduled service\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips"
              ]
            },
            "description": "Create a new trip with all details. Availability will be auto-generated from ship capacity."
          }
        },
        {
          "name": "2. LIST TRIPS",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips?page=1&limit=10&status=SCHEDULED",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "SCHEDULED"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "startDate",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "endDate",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Get paginated list of trips with optional filters"
          }
        },
        {
          "name": "3. GET TRIP BY ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}"
              ]
            },
            "description": "Get full details of a specific trip"
          }
        },
        {
          "name": "4. UPDATE TRIP",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"OPEN\",\n  \"remarks\": \"Trip opened for bookings\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}"
              ]
            },
            "description": "Update trip fields (cannot change ship if already has bookings)"
          }
        },
        {
          "name": "5. DELETE TRIP",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}"
              ]
            },
            "description": "Soft delete a trip (only if no bookings exist)"
          }
        },
        {
          "name": "6. GET TRIP AVAILABILITY",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/availability",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "availability"
              ]
            },
            "description": "Get availability breakdown (Passenger/Cargo/Vehicle with total and remaining quantities)"
          }
        },
        {
          "name": "7. CREATE AVAILABILITY",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"availabilityType\": \"PASSENGER\",\n  \"cabinId\": \"{{cabin_id}}\",\n  \"totalQuantity\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/availability",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "availability"
              ]
            },
            "description": "Create new availability entry for a trip (PASSENGER, CARGO, or VEHICLE type)"
          }
        },
        {
          "name": "8. UPDATE AVAILABILITY",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"totalQuantity\": 120\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/availability/{{availability_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "availability",
                "{{availability_id}}"
              ]
            },
            "description": "Update availability quantity (cannot reduce below allocated quantity)"
          }
        },
        {
          "name": "9. DELETE AVAILABILITY",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/availability/{{availability_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "availability",
                "{{availability_id}}"
              ]
            },
            "description": "Delete availability (only if no allocations exist)"
          }
        }
      ]
    },
    {
      "name": "GROUP 2: AGENT ALLOCATIONS",
      "description": "4 endpoints for managing partner/agent seat allocations to trips",
      "item": [
        {
          "name": "10. CREATE ALLOCATION",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partner\": \"{{partner_id}}\",\n  \"allocations\": [\n    {\n      \"availabilityId\": \"{{availability_id_1}}\",\n      \"quantity\": 50\n    },\n    {\n      \"availabilityId\": \"{{availability_id_2}}\",\n      \"quantity\": 30\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/allocations",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "allocations"
              ]
            },
            "description": "Allocate portions of availability to a partner/agent. Validates total does not exceed capacity."
          }
        },
        {
          "name": "11. LIST ALLOCATIONS",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/allocations",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "allocations"
              ]
            },
            "description": "Get all allocations for a trip"
          }
        },
        {
          "name": "12. UPDATE ALLOCATION",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partner\": \"{{partner_id}}\",\n  \"allocations\": [\n    {\n      \"availabilityId\": \"{{availability_id_1}}\",\n      \"quantity\": 40\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/allocations/{{allocation_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "allocations",
                "{{allocation_id}}"
              ]
            },
            "description": "Update an existing allocation (cannot exceed available capacity)"
          }
        },
        {
          "name": "13. DELETE ALLOCATION",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/allocations/{{allocation_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "allocations",
                "{{allocation_id}}"
              ]
            },
            "description": "Remove an allocation (only if no bookings use this allocation)"
          }
        }
      ]
    },
    {
      "name": "GROUP 3: TRIP TICKETING RULES",
      "description": "4 endpoints for assigning and managing ticketing rules on trips",
      "item": [
        {
          "name": "14. ASSIGN RULE TO TRIP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketingRuleId\": \"{{ticketing_rule_id}}\",\n  \"priority\": 1,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/ticketing-rules",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "ticketing-rules"
              ]
            },
            "description": "Assign a ticketing rule to a trip. Rule type must match rule's type and no duplicates allowed."
          }
        },
        {
          "name": "15. GET TRIP RULES",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/ticketing-rules",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "ticketing-rules"
              ]
            },
            "description": "Get all ticketing rules assigned to a trip"
          }
        },
        {
          "name": "16. UPDATE TRIP RULE",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"priority\": 2,\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/ticketing-rules/{{trip_rule_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "ticketing-rules",
                "{{trip_rule_id}}"
              ]
            },
            "description": "Update priority and active status of a trip rule"
          }
        },
        {
          "name": "17. REMOVE TRIP RULE",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/ticketing-rules/{{trip_rule_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "ticketing-rules",
                "{{trip_rule_id}}"
              ]
            },
            "description": "Remove a ticketing rule from a trip (cannot remove if bookings depend on it)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "authToken",
      "value": ""
    },
    {
      "key": "trip_id",
      "value": ""
    },
    {
      "key": "ship_id",
      "value": ""
    },
    {
      "key": "port_id_1",
      "value": ""
    },
    {
      "key": "port_id_2",
      "value": ""
    },
    {
      "key": "partner_id",
      "value": ""
    },
    {
      "key": "availability_id",
      "value": ""
    },
    {
      "key": "cabin_id",
      "value": ""
    },
    {
      "key": "allocation_id",
      "value": ""
    },
    {
      "key": "ticketing_rule_id",
      "value": ""
    },
    {
      "key": "trip_rule_id",
      "value": ""
    }
  ]
}
