            "url": {
              "raw": "{{base_url}}/api/trips/{{trip_id}}/availabilities?page=1&limit=10&type=passenger&search=",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "trips",
                "{{trip_id}}",
                "availabilities"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number for pagination"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Records per page"
                },
                {
                  "key": "type",
                  "value": "passenger",
                  "description": "Filter by type: passenger, cargo, vehicle (optional)"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search by cabin name (optional)"
                }
              ]
            },
            "description": "List all availabilities for a specific trip"
          },
          "response": []
        },
        {
          "name": "Get Availability Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
