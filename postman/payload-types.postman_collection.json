{
  "info": {
    "name": "Shipment Backend - Payload Types",
    "_postman_id": "f8d6f7f4-6c1a-4b0f-b2d8-ptypes",
    "description": "CRUD for Passenger/Cargo/Vehicle payload types",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [{ "key": "baseUrl", "value": "http://localhost:3001/api" }, { "key": "cId", "value": "" }],
  "item": [
    {
      "name": "List Payload Types",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/payload-types?category=Vehicle&page=1&limit=10&q=&status=Active&sortBy=createdAt&sortOrder=desc",
          "host": ["{{baseUrl}}"],
          "path": ["payload-types"],
          "query": [
            { "key": "category", "value": "Vehicle" },
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "q", "value": "" },
            { "key": "status", "value": "Active" },
            { "key": "sortBy", "value": "createdAt" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
      }
    },
    {
      "name": "Create Payload Type",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/payload-types", "host": ["{{baseUrl}}"], "path": ["payload-types"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sedan\",\n  \"code\": \"SED\",\n  \"description\": \"Standard passenger car\",\n  \"category\": \"Vehicle\",\n  \"maxWeightKg\": 2000,\n  \"dimensions\": \"450×180×150 cm\",\n  \"status\": \"Active\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Payload Type by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/payload-types/{{cId}}",
          "host": ["{{baseUrl}}"],
          "path": ["payload-types", "{{cId}}"]
        }
      }
    },
    {
      "name": "Update Payload Type",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/payload-types/{{cId}}",
          "host": ["{{baseUrl}}"],
          "path": ["payload-types", "{{cId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Updated description\",\n  \"status\": \"Inactive\"\n}"
        }
      }
    },
    {
      "name": "Delete Payload Type",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/payload-types/{{cId}}",
          "host": ["{{baseUrl}}"],
          "path": ["payload-types", "{{cId}}"]
        }
      }
    }
  ]
}
