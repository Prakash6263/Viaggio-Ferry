      "item": [
        {
          "name": "Register Super Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "form-data"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Admin User",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "admin@example.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "SecurePassword123!",
                  "type": "text"
                },
                {
                  "key": "profileImage",
                  "type": "file",
                  "description": "Optional profile picture (JPG, PNG, max 5MB)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/register-super-admin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "register-super-admin"]
